{
  "defaultValue": {
    "textPicSpace": 1
  },
  "formItems": [
    {
      "type": "img-uploader",
      "elFormItemProps": {
        "prop": "image",
        "label": "Image"
      },
      "elFormItemChildProps": {
        "placeholder": "place input the img src"
      }
    },
    {
      "type": "editor-form-style-text-input",
      "elFormItemProps": {
        "prop": "text",
        "label": "Text content"
      },
      "elFormItemChildProps": {
        "placeholder": "Please enter the Text content",
        "defaultValue": "Please enter the Text content"
      }
    },
    {
      "type": "el-slider",
      "elFormItemProps": {
        "prop": "textPicSpace",
        "label": "Spacing between content and images"
      },
      "elFormItemChildProps": {
        "placeholder": "place input the spacing",
        ":step": "0.1",
        ":min": 0,
        ":max": 10,
        "style":"margin: 0 1em;",
        "@input": "handleSubmit"
      }
    },
    {
      "type": "el-switch",
      "elFormItemProps": {
        "prop": "darkTheme",
        "label": "Theme"
      },
      "elFormItemChildProps": {
        "active-text": "Dark theme",
        "inactive-text": "Bright color theme",
        "@change": "handleSubmit"
      }
    }
  ],
  "i18n": {
    "en": {
      "Image": "Image",
      "Text content": "Text content",
      "Content reverse": "Content reverse",
      "Spacing between content and images": "Spacing between content and images",
      "Theme": "Theme"
    },
    "zh": {
      "Image": "图片",
      "Text content": "文本内容",
      "Content reverse": "左右反转",
      "Spacing between content and images": "内容和图片的间距",
      "Theme": "主题"
    }
  }
}
